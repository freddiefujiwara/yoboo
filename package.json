{
  "name": "yoboo",
  "version": "1.0.0",
  "description": "Yaml based task runner",
  "scripts": {
    "clean": "rimraf lib",
    "test": "cross-env BABEL_ENV=commonjs mocha --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src test",
    "build": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build",
    "postinstall": "postinstall-build lib \"npm run prepublish\""
  },
  "bin": {
    "yoboo": "index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freddiefujiwara/yoboo.git"
  },
  "keywords": [
    "headless chrome",
    "task runner",
    "es2015"
  ],
  "author": "Fumikazu Fujiwara <npm@ze.gs> (http://freddiefujiwara.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/freddiefujiwara/yoboo/issues"
  },
  "homepage": "https://github.com/freddiefujiwara/yoboo#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.0.2",
    "cross-env": "^5.0.1",
    "eslint": "^4.1.1",
    "eslint-plugin-import": "^2.6.0",
    "mocha": "^3.4.2",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "js-yaml": "^3.9.0",
    "postinstall-build": "^5.0.0"
  }
}
